                         <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
                    </field>
                    <field id="debug_active" translate="label" type="select" sortOrder="2" showInDefault="1" showInWebsite="1" showInStore="1">
                         <label>Debug Activated:</label>
                         <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
                    </field>
               </group>
               <group id="frontend_group" translate="label" type="text" sortOrder="10" showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>Frontend and Customer-Specific Settings</label>
                    <field id="sender_address" translate="label" type="text" sortOrder="1" showInDefault="1" showInWebsite="1" showInStore="1">
                         <label>Sender address</label>
                    </field>
                    <field id="new_order_created" translate="label" type="select" sortOrder="2" showInDefault="1" showInWebsite="1" showInStore="1" canRestore="1">
                         <label>New order created</label>
                         <source_model>Commercers\Workshop\Model\Source\Email\Templates</source_model>
                    </field>
                    <field id="offer_created" translate="label" type="select" sortOrder="3" showInDefault="1" showInWebsite="1" showInStore="1">
                         <label>Offer created:</label>
                         <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
