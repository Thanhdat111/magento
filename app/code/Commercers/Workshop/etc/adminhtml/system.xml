<?xml version="1.0"?>
<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Config:etc/system_file.xsd">
     <system>
          <tab id="commercers" translate="label" sortOrder="10">
               <label>commercers</label>
          </tab>
          <section id="workshop" translate="label" sortOrder="130" showInDefault="1" showInWebsite="1" showInStore="1">
               <class>separator-top</class>
               <label>Workshop</label>
               <tab>commercers</tab>
               <resource>Commercers_Workshop::config</resource>
